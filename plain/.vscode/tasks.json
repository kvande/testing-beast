{
    // https://go.microsoft.com/fwlink/?LinkId=733558
    "version": "2.0.0",
    "tasks": [
        
        {
            "label": "Generate project",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "cmake -B ./build  . -D CMAKE_BUILD_TYPE=Debug"
            },
            "windows": {
                "command": "cmake -B ./build  . -DCMAKE_BUILD_TYPE=Debug -A x64",    // for vs build
                //"command": "cmake -B ./build",     // for ninja builds
            },
            "group":  "build",
        },
        {
            "label": "Build project",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "cmake  --build ./build --target install",
            },
            "windows": {
                "command": "cmake  --build ./build --target install --config Debug",
            },

            "group":  {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Generate project"],
            "presentation": {              
                "clear": false,
                "showReuseMessage": false
            }
        },
    ]
}